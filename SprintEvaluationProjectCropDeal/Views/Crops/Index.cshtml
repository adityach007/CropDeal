@using SprintEvaluationProjectCropDeal.Models
@model List<Crops>

<div class="container mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">Crop Listings</h2>
    </div>

    <a asp-controller="Crops" asp-action="Create" class="btn btn-success mb-3">
        Add New Crop
    </a>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Crop Type</th>
                <th>Crop Name</th>
                <th>Quantity (Kg)</th>
                <th>Location</th>
                <th>Farmer ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var crop in Model)
            {
                <tr>
                    <td>@crop.CropType</td>
                    <td>@crop.CropName</td>
                    <td>@crop.QuantityInKg</td>
                    <td>@crop.Location</td>
                    <td>@crop.FarmerId</td>
                    <td>
                        <a asp-controller="Crops" asp-action="Edit" asp-route-id="@crop.CropId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-controller="Crops" asp-action="Delete" asp-route-id="@crop.CropId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>