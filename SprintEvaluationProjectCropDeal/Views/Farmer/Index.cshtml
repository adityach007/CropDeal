@using SprintEvaluationProjectCropDeal.Models
@model List<Farmer>

<div class="container mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">Farmer List</h2>
    </div>

    <a asp-controller="Farmer" asp-action="Create" class="btn btn-success mb-3">
        Add New Farmer
    </a>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Aadhar</th>
                <th>Bank Account</th>
                <th>IFSC Code</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var farmer in Model)
            {
                <tr>
                    <td>@farmer.FarmerName</td>
                    <td>@farmer.EmailAddressFarmer</td>
                    <td>@farmer.FarmerPhoneNumber</td>
                    <td>@farmer.FarmerAadharNumber</td>
                    <td>@farmer.FarmerBankAccount</td>
                    <td>@farmer.FarmerIFSCCode</td>
                    <td>@farmer.IsFarmerIdActive</td>
                    <td>
                        <a asp-controller="Farmer" asp-action="Edit" asp-route-id="@farmer.FarmerId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-controller="Farmer" asp-action="Delete" asp-route-id="@farmer.FarmerId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>